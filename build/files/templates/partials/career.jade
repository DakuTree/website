- if(resumeProfile.careers.length > 0) {
div(class="experiences")
	each career in resumeProfile.careers
		div(class="experience row")
			div(class="col-md-4")
				h4= career.title
				p(class="experience-period")= career.start_date +' - '+ career.end_date

			div(class="col-md-8")
				p
					strong= career.level +' - '+ career.specification
					span(class="hidden-phone")= career.description
					span(class="experience-details")
						span(class="location")
							span(class="glyphicon glyphicon-map-marker")
							= career.location
						- if(career.link) {
						span(class="seperator") |
						span(class="link")
							span(class="glyphicon glyphicon-link")
							a(href=career.link, target="_blank") career.link
						- }
- } else {
div(class="alert alert-warning") No careers were found in this resume.
- }
